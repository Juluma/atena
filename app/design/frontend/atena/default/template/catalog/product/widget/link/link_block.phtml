<?php
$_helper = $this->helper('catalog/output');
$_product = $this->getProduct();
$productBlock = $this->getLayout()->createBlock('catalog/product_price');
?>

<div class="widget widget-product-link">
    <a <?php echo $this->getLinkAttributes() ?>>
        <div class="image-content">
            <div class="anchor-text"><div class="centered"><?php echo $this->escapeHtml($this->getAnchorText()) ?></div></div>
            <img src="<?php print Mage::helper('catalog/image')->init($_product, 'image')->resize(289,330); ?>" />
        </div>
        <div class="text-content">
            <?php $full_name = $_helper->productAttribute($_product, $_product->getName(), 'name'); ?>
            <?php $name_parts = explode(',', $full_name, 2); ?>
            <h2 class="product-name"><strong><?php echo $name_parts[0] ?></strong><?php print (isset($name_parts[1])) ? ', <span class="subtitle">'.$name_parts[1].'</span>' : ''; ?></h2>
            <?php echo $productBlock->getPriceHtml($_product); ?>
        </div>
    </a>
</div>
